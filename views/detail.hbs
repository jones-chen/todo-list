<form action="/todos/{{ todo._id }}?_method=DELETE" method="POST" style="display: inline;"> {{!-- 刪除 --}}
  <div class="input-group">
    {{!-- checkboxes --}}
    <div class="input-group-text">
        <input class="form-check-input mt-0" type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}} disabled>
    </div>
    {{!-- Text --}}
    <input class="form-control" type="text" placeholder="name" name="name" value="{{todo.name}}" disabled>
    {{!-- BTN --}}
    <a class="btn btn-success" href="/todos/{{ todo._id }}/edit">edit</a>
    <button class="btn btn-danger" type="submit">delete</button>
  </div>
</form>