<ul class="list-group">
  {{#each todos}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-auto me-auto" >
          <input type="checkbox" name="isDone" {{#if this.isDone }} checked {{/if}} disabled>
          <h4 class= 'ms-3'style="display:inline">{{this.name}}</h4>
        </div>
        <div class="col-auto">
          <a class='btn btn-secondary' href="./todos/{{ this._id }}">detail</a>  {{!-- /todos/5e9460ebe0174f4a734ce12a --}}
          <a class='btn btn-success' href="./todos/{{ this._id }}/edit">edit</a>
          <form action="./todos/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">  {{!-- 刪除 --}}
            <button type="submit" class='btn btn-danger'>delete</button>
          </form>
        </div>
      </div>
    </li>
  {{/each}}
</ul>